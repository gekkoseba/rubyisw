<h2>Registro</h2>

<%= bootstrap_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>

      <%= f.text_field :name, autofocus: true, label: "Nombre"%>
      <%= f.select :role, ["Operador","Supervisor", "Jefe"],autofocus: true, label: "Cargo" %>
    <%= f.email_field :email, autofocus: true, label: "Correo" %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> caracteres mínimo)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "off", label: "Contraseña" %>
    <%= f.password_field :password_confirmation, autocomplete: "off", label: "Confirmación" %>
    <%= f.submit "Registro" %>
<% end %>

